<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"      
 "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">


<!-- 使用映射器 -->
<mapper namespace="cn.amy.system.dao.UserDao">

	<!-- 保存用户信息 -->
	<insert id="save" parameterType="cn.amy.system.entity.User">
		insert into
			users
			(name,phone,password)
		values
			(#{name},#{phone},#{password});
	</insert>
	
	
</mapper>